# =================================================================
# Environment Configuration Template for ms-orizon-api-bradesco
# =================================================================
# Copy this file to .env and set your specific values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bradesco_transactions
MONGODB_DATABASE=bradesco_transactions

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Server Configuration
SERVER_PORT=8080
CONTEXT_PATH=/api/v1

# External Services
AUTHORIZATION_SERVICE_URL=http://localhost:8081
AUTHORIZATION_TIMEOUT=30s

# Logging
LOG_LEVEL=INFO
FEIGN_LOG_LEVEL=DEBUG

# Security (if needed)
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=3600

# Docker Compose Networks (for containerized deployment)
NETWORK_NAME=bradesco-network
